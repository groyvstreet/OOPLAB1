@{
}

@model Lab1.Models.SpecialistModels.SignUpSpecialistModel
 
<h2>Регистрация специалиста</h2>
 
<form asp-action="SignUp" asp-controller="Specialist" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="input-group mb-3">
            <select class="custom-select" id="inputGroupSelect01" name="companyId">
                @foreach (var company in Model.Companies)
                {
                    <option value="@company.Id">@company.LegalName</option>
                }
            </select>
        </div>
        <div>
            <input type="submit" value="Завершить регистрацию" />
        </div>
    </div>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
