@{
}

@model Lab1.Models.DepositModels.CreateDepositModel

<form asp-action="Profile" asp-controller="Client" asp-anti-forgery="true">
    <input type="submit" value="Назад">
</form>

<h2>Создание вклада</h2>
 
<form asp-action="Create" asp-controller="Deposit" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Money">Введите денежную сумму</label><br />
            <input type="text" asp-for="Money" />
            <span asp-validation-for="Money" />
        </div>
        <div>
            <label asp-for="Percent">Введите процент</label><br />
            <input type="text" asp-for="Percent" />
            <span asp-validation-for="Percent" />
        </div>
        <div>
            <label asp-for="ClosedTime">Введите время закрытия</label><br />
            <input asp-for="ClosedTime" asp-format="{0:yyyy-MM-ddTHH:mm}" />
        </div>
        <div>
            <label asp-for="BalanceName">Введите наименование счета</label><br />
            <input type="text" asp-for="BalanceName" />
        </div>
        <div>
            <input type="submit" value="Создать вклад" />
        </div>
    </div>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
