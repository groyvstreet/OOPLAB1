@{
}

@model Lab1.Models.ClientModels.SignUpClientModel

<form asp-action="LogOut" asp-controller="User" asp-anti-forgery="true">
    <input type="submit" value="Выйти">
</form>

<h2>Регистрация клиента</h2>
 
<form asp-action="SignUp" asp-controller="Client" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="PassportSeries">Введите серию паспорта</label><br />
            <input type="text" asp-for="PassportSeries" />
            <span asp-validation-for="PassportSeries" />
        </div>
        <div>
            <label asp-for="PassportNumber">Введите номер паспорта</label><br />
            <input type="number" asp-for="PassportNumber" />
            <span asp-validation-for="PassportNumber" />
        </div>
        <div>
            <label asp-for="IdentificationNumber">Введите идентификационный номер паспорта</label><br />
            <input type="text" asp-for="IdentificationNumber" />
            <span asp-validation-for="IdentificationNumber" />
        </div>
        <div class="input-group mb-3">
            <select class="custom-select" id="inputGroupSelect01" asp-for="@Model.CompanyId">
                @foreach (var company in Model.Companies)
                {
                    <option value="@company.Id">@company.LegalName</option>
                }
            </select>
        </div>
        <div>
            <input type="submit" value="Завершить регистрацию" />
        </div>
    </div>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
