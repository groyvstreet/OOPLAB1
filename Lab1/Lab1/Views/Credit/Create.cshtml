@{
}

@model Lab1.Models.CreditModels.CreateCreditModel

<form asp-action="Profile" asp-controller="Client" asp-anti-forgery="true" method="get">
    <input type="submit" value="Назад">
</form>

<h2>Оформление кредита</h2>
 
<form asp-action="Create" asp-controller="Credit" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Money">Введите денежную сумму</label><br />
            <input type="text" asp-for="Money" />
            <span asp-validation-for="Money" />
        </div>
        <div>
            <label asp-for="Months">Введите количество месяцев</label><br />
            <input type="text" asp-for="Months" />
            <span asp-validation-for="Months" />
        </div>
        <div>
            <label asp-for="BalanceName">Введите наименование счета</label><br />
            <input type="text" asp-for="BalanceName" />
            <span asp-validation-for="BalanceName" />
        </div>
        <div>
            <input type="hidden" asp-for="Percent" value="@ViewBag.Percent"/>
        </div>
        <div>
            <input type="submit" value="Оформить кредит" />
        </div>
    </div>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
